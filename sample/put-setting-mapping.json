{
  "settings": {
    "analysis": {
      "tokenizer": {
        "kuromoji_ja": {
          "type": "kuromoji_tokenizer",
          "mode": "search",
          "user_dictionary": "userdict_ja.txt"
        }
      },
      "char_filter": {
        "normalize_nfkd": {
          "type": "icu_normalizer",
          "name": "nfkc",
          "mode": "decompose"
        },
        "whitespaces": {
          "type": "pattern_replace",
          "pattern": "\\s{2,}",
          "replacement": "\u0020"
        }
      },
      "filter": {
        "hiragana_2_katakana": {
          "type": "icu_transform",
          "id": "Hiragana-Katakana"
        },
        "concatenation": {
          "type": "concatenate",
          "token_separator": ""
        },
        "readingform_kana": {
          "type": "kuromoji_readingform",
          "use_romaji": false
        }
      },
      "analyzer": {
        "default_analyzer": {
          "tokenizer": "standard",
          "char_filter": [
            "icu_normalizer",
            "whitespaces",
            "html_strip"
          ],
          "filter": [
            "lowercase",
            "stop",
            "trim"
          ]
        },
        "readingform_analyzer_ja": {
          "type": "custom",
          "tokenizer": "kuromoji_ja",
          "char_filter": [
            "normalize_nfkd",
            "whitespaces",
            "html_strip",
            "kuromoji_iteration_mark"
          ],
          "filter": [
            "trim",
            "readingform_kana",
            "concatenation",
            "hiragana_2_katakana",
            "kuromoji_stemmer"
          ]
        },
        "analyzer_ja": {
          "type": "custom",
          "tokenizer": "kuromoji_ja",
          "char_filter": [
            "icu_normalizer",
            "whitespaces",
            "html_strip",
            "kuromoji_iteration_mark"
          ],
          "filter": [
            "lowercase",
            "trim",
            "kuromoji_baseform",
            "kuromoji_part_of_speech",
            "ja_stop",
            "kuromoji_stemmer"
          ]
        }
      }
    }
  },
  "mappings": {
    "category": {
      "properties": {
        "name": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        }
      },
      "dynamic_templates": [
        {
          "l10n_template": {
            "match": "l10n",
            "match_mapping_type": "object",
            "mapping": {
              "type": "nested",
              "properties": {
                "lang": {
                  "type": "string"
                },
                "name": {
                  "type": "string",
                  "fields": {
                    "sort_code": {
                      "type": "string",
                      "analyzer": "default_analyzer"
                    },
                    "sort_code_ja": {
                      "type": "string",
                      "analyzer": "readingform_analyzer_ja"
                    },
                    "keyword_ja": {
                      "type": "string",
                      "analyzer": "analyzer_ja"
                    }
                  }
                }
              }
            }
          }
        }
      ]
    }
  }
}
